package com.erha.ops;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.autoconfigure.security.servlet.SecurityAutoConfiguration;
import org.springframework.boot.actuate.autoconfigure.security.servlet.ManagementWebSecurityAutoConfiguration;
import org.springframework.boot.autoconfigure.domain.EntityScan;
import org.springframework.data.jpa.repository.config.EnableJpaRepositories;
import org.springframework.context.annotation.ComponentScan;

@SpringBootApplication(exclude = {
    SecurityAutoConfiguration.class,
    ManagementWebSecurityAutoConfiguration.class
})
@EnableJpaRepositories(basePackages = {
    "com.erha.ops.repository",
    "com.erha.ops.rfq.repository", 
    "com.erha.ops.auth.repository",
    "com.erha.quote.repository"
})
@EntityScan(basePackages = {
    "com.erha.ops.entity",
    "com.erha.ops.rfq.entity",
    "com.erha.ops.auth.entity",
    "com.erha.quote.model"
})
@ComponentScan(basePackages = {
    "com.erha.ops",
    "com.erha.quote"
})
public class ErhaOpsApplication {

    public static void main(String[] args) {
        System.out.println("==================================================");
        System.out.println("?? Starting ERHA OPS Platform v7.0");
        System.out.println("?? Quote Management Module: ENABLED");
        System.out.println("??? RFQ Management: ACTIVE");
        System.out.println("??  SECURITY: DISABLED (Development Mode)");
        System.out.println("==================================================");
        
        SpringApplication.run(ErhaOpsApplication.class, args);
    }
}
